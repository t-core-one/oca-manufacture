<odoo>
    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherit</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field
                    name="package_propagation"
                    invisible="not display_package_propagation"
                />
            </field>
            <xpath expr="//field[@name='bom_line_ids']/list" position="inside">
                <field
                    name="propagate_package"
                    column_invisible="not parent.display_package_propagation or not parent.package_propagation"
                />
            </xpath>
        </field>
    </record>
</odoo>
